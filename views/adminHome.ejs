<html>
  <head>
    <title>Online Voting Platform |Rangha Vardhan</title>
    <meta name="csrf-token" content="<%= csrf %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css"
      integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
  </head>
  <body
    class="bg-[url('https://99designs-blog.imgix.net/blog/wp-content/uploads/2018/12/Gradient_builder_2.jpg?auto=format&q=60&w=1815&h=1361.25&fit=crop&crop=faces')] bg-no-repeat bg-cover"
  >
    <div class="flex justify-center italic">
      <%- include ('updatedHeader', {username: username}) %>
    </div>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col justify-center md:w-2/5 w-full">
        <hr />
        <div class="pt-6 flex justify-between">
          <p class="font-bold text-4xl">Your Elections</p>
          <a
            href="/elections/new"
            class="bg-blue-500 hover:bg-blue-600 border-1.5 border-white rounded-lg p-2 text-white font-bold"
          >
            <i class="fa fa-plus"></i> New Election
          </a>
        </div>
        <!-- List of Elections -->
        <div><%- include ('elections.ejs') %></div>
      </div>
    </div>
  </body>
</html>
