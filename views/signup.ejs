<html>
  <head>
    <title>Sign Up</title>
    <meta name="csrf-token" content="<%= csrf %>" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-[url('https://s3.amazonaws.com/participedia.prod/d1645146-5d2c-4c29-bab9-a863c075a29d_onlinevoting.jpg')] bg-no-repeat bg-cover">
    <div class="flex justify-center"><%- include ('header') %></div>
    <div class="flex flex-col justify-center items-center p-4">
      <div class="flex flex-col justify-center md:w-1/5 w-full">
        <h1 class="text-2xl flex justify-center font-semibold">Sign Up</h1>
        <form action="/users" method="post" class="flex flex-col gap-4 pt-6">
          <input type="hidden" name="_csrf" value="<%= csrf %>">
          <div class="flex flex-col text-xl font-bold italic">
            <label for="name">Name</label>
            <input
              type="text"
              name="name"
              class="border-2 p-2 rounded-lg w-full h-10 font-sm"
            />
          </div>
          <div class="flex flex-col text-xl font-bold italic>
            <label for="email">Email</label>
            <input
              type="text"
              name="email"
              class="border-2 p-2 rounded-lg w-full h-10 font-sm"
            />
          </div>
          <div class="flex flex-col text-xl font-bold italic">
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              class="border-2 p-2 rounded-lg w-full h-10 font-sm"
            />
          </div>
          <button
            type="submit"
            class="bg-blue-500 border-2 border-white flex justify-center hover:bg-blue-700 text-white font-bold p-1 rounded-lg w-full mt-8 "
          >
            Sign Up
          </button>
        </form>

        <!-- flash message -->
        <div class="flex flex-col justify-center items-center gap-3 ">
          <% if (messages && messages.error && messages.error.length > 0) { %>
            <% for(var i=0; i<messages.error.length; i++) {%>
              <div class="bg-red-300 text-red-900 font-semibold p-2 rounded-lg shadow"> <%= messages.error[i] %></div>
            <% } %>
          <% } %>
        </div>

        <div class="flex flex-col justify-center pt-4 items-center font-bold">
          <p>Account Exists?
          <a
            class="bg-green-500 border-2 px-8 border-blue hover:bg-green-700  text-white p-1 rounded-lg"
            href="/login"
            >Log In</a
          ></p>
        </div>
      </div>
    </div>
  </body>
</html>
